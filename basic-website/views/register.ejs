<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyApp - Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/48115b5d60.js" crossorigin="anonymous"></script>
    <!-- Custom Style -->
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="bg-blur text-center text-dark register-box" style="width: 400px;">
            <!-- Registration Form -->
            <form action="/sign-up" method="POST">
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" name="username" id="username" placeholder="Full Name" class="form-control" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="register_email" id="register_email" placeholder="Email" class="form-control" required>
                </div> 
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="register_password" id="register_password" placeholder="Password" class="form-control" required>
                    <span class="input-group-text toggle-icon" onclick="togglePasswordVisibility()">
                        <i id="toggleRegisterPassword" class="fas fa-eye" style="cursor: pointer;"></i>
                    </span>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="register_cpassword" id="register_cpassword" placeholder="Confirm Password" class="form-control" required>
                </div>
                <!-- <div class="d-flex align-items-center mb-3">
                    <label class="form-label">Gender:</label>
                    <div>
                        <input type="radio" id="male" name="gender" value="Male"> <label for="male">Male</label>
                        <input type="radio" id="female" name="gender" value="Female"> <label for="female">Female</label>
                    </div>
                </div> -->
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                    <input type="number" name="age" id="age" placeholder="Age" class="form-control" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    <select name="countryCode" id="countryCode" class="form-select" style="max-width: 100px;">
                        <option value="+1">+1 </option>
                        <option value="+91">+91 </option>
                        <option value="+44">+44 </option>
                        <option value="+61">+61 </option>
                        <option value="+81">+81 </option>
                    </select>
                    <input type="number" name="phone" id="phone" placeholder="Phone Number" class="form-control" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker"></i></span>
                    <textarea name="address" id="address" class="form-control" placeholder="Address" required></textarea>
                </div>
                <button type="submit" class="btn btn-custom w-100">Register</button>
            </form>
        </div>
    </div>
    <%- include('partials/footer') %>
    <!-- Validation Script -->
     <script src="/js/register_validation.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>