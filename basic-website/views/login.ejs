<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyApp - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/48115b5d60.js" crossorigin="anonymous"></script>
    <!-- Custom Style -->
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="bg-blur text-center text-dark login-box" style="width: 400px;">
            <!-- Profile Icon -->
            <div class="mb-3">
                <img src="https://cdn-icons-png.flaticon.com/128/1077/1077114.png" width="60" alt="User">
            </div>
            <!-- Login Form -->
            <form action="/login" method="POST">
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="login_email" id="login_email" placeholder="Email" class="form-control" required>
                </div>
                <div class="mb-3 input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="login_password" id="login_password" placeholder="Password" class="form-control" required>
                    <span class="input-group-text toggle-icon" onclick="togglePasswordVisibility()">
                        <i id="toggleLoginPassword" class="fas fa-eye" style="cursor: pointer;"></i>
                    </span>
                </div>
                <!-- To be implemented later -->
                <div class="d-flex justify-content-between mb-3">
                    <div>
                        <input type="checkbox" name="remember_me" id="remember_me"> Remember Me
                    </div>
                    <a href="#" class="text-dark">Forgot Password</a>
                </div>
                <button type="submit" class="btn btn-custom w-100">Login</button>
            </form>
        </div>
    </div>
    <%- include('partials/footer') %>
    <!-- Validation Script -->
     <script src="/js/login_validation.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>