<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
        <!-- Navbar -->
        <nav class="navbar">
            <div class="user-info">
                <img src="<%= user.photos[0].value %>" alt="Profile Picture" class="profile-pic">
                <span><%= user.displayName %></span>
            </div>
            <a href="/logout" class="logout-btn">Logout</a>
        </nav>

        <!-- Main Container -->
        <div class="container">
            <h2>Weather Information</h2>

            <!-- City Input -->
            <input type="text" id="city-input" placeholder="Enter city name" class="form-control">
            <button class="btn btn-primary" onclick="fetchWeather()">Get Weather</button>
            <button class="btn btn-primary" onclick="getCurrentLocation()">Use My Location</button>

            <!-- Weather Display -->
            <div id="weather-info" class="weather-container">
                <h3 id="city-name"></h3>
                <p id="weather-description"></p>
                <img id="weather-icon" src="" alt="">
                <p><strong>Temperature:</strong> <span id="temperature"></span>Â°C</p>
            </div>

            <!-- Error Message -->
            <p id="error-message" class="error"></p>
        </div>
    <script src="/js/open_weather.js"></script>
</body>
</html>